{{#unless homepage}}
  <div id="posts-header">

    <h3>
      {{#if dashboard}}
        My Posts
      {{else if homepage}}
      {{!-- empty --}}
      {{else}}
        {{#if posts.length}}
          All Posts by {{ username }}
        {{else}}
          No posts available from {{ username }}
        {{/if}}
      {{/if}}
    </h3>

    {{#if dashboard}}
      {{!-- NEW POST BUTTON --}}
      <button type="button"
        id="new-post-button"
        class="btn btn-primary fade-in-out"
      >New Post
      </button>
    {{/if}}

  </div>
{{/unless}}

<div id="all-posts">
  {{#if posts.length}}
    {{#each posts as |post|}}
      {{>postcard post=post dashboard=../dashboard loggedIn=../loggedIn}}
    {{/each}}
  {{else}}
    No posts yet...
  {{/if}}
</div>

<div>
    {{#if dashboard}}
      <p>See all my <a href="/dashboard/comments">comments</a></p>
    {{else}}
      <p>See all <a href="/comments/{{username}}">comments</a> by {{username}}</p>
    {{/if}}
</div>
