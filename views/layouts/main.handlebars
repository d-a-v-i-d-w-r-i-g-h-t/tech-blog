<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>THE TECH BLOG</title>

  <!-- Link to Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>
<nav
  class="navbar fixed-top bg-dark border-bottom border-body"
  data-bs-theme="dark"
  data-logged-in="{{loggedIn}}"
  data-user-id="{{userId}}"
  data-username="{{username}}"
  data-single-post="{{singlePost}}"
  data-global-edit-mode="false"
>
    <div class="container-fluid">
      <a class="navbar-brand" href="#">THE TECH BLOG</a>
      <div class="navbar-expand">
        <div class="navbar-nav">
          {{#if homepage}}
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          {{else}}
            <a class="nav-link" href="/">Home</a>
          {{/if}}
          {{#if dashboard}}
            <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
          {{else}}
            {{#if dashboardComments}}
              <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
            {{else}}
              <a class="nav-link" href="/dashboard">Dashboard</a>
            {{/if}}
          {{/if}}
        {{#if loggedIn}}
          <a class="nav-link" href="#" id="logout-link">Logout</a>
        {{else if signupPage}}
          <a class="nav-link active" href="/signup">Sign Up</a>
        {{else}}
          <a class="nav-link{{#if loginPage}} active" aria-current="page{{/if}}" href="/login">Login</a>
        {{/if}}
        </div>
      </div>
    </div>
  </nav>
  <main>
    {{#if dashboard}}
      {{> dashboard-modals}}
    {{/if}}
    {{#if dashboardComments}}
      {{> commentcard-modals}}
    {{/if}}
    {{{body}}}
  </main>
  

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  
  <!-- Other JavaScript files -->
  {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    <script src="/js/new-comment.js"></script>
    {{!-- {{#if singlePost}}
      <script src="/js/dashboard-comments.js"></script>
    {{/if}} --}}
  {{/if}}
  

  {{#if loginPage}}
    <script src="/js/login.js"></script>

  {{else if signupPage}}
    <script src="/js/signup.js"></script>
  
  {{else if dashboard}}
    <script src="/js/dashboard.js"></script>
    <script src="/js/dashboard-modals.js"></script>
    <script src="/js/dashboard-comments.js"></script>
    <script src="/js/view-posts.js"></script>
    <script src="/js/show-buttons.js"></script>
    <script src="/js/format-date.js"></script>

  {{else if dashboardComments}}
    <script src="/js/dashboard.js"></script>
    <script src="/js/dashboard-comments.js"></script>
    <script src="/js/dashboard-comments-modals.js"></script>
    <script src="/js/view-comments.js"></script>
    <script src="/js/show-buttons.js"></script>
    <script src="/js/format-date.js"></script>

  {{else if commentsPage}}
    <script src="/js/view-comments.js"></script>
    <script src="/js/show-buttons.js"></script>
    <script src="/js/format-date.js"></script>


  {{else}}
    <script src="/js/view-posts.js"></script>
    <script src="/js/show-buttons.js"></script>
    <script src="/js/format-date.js"></script>

  {{/if}}

</body>

</html>